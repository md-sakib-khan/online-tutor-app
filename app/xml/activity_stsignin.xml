<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D3657"
    tools:context=".stsignin">


    <ScrollView
        android:id="@+id/scrollView2"
        style="@android:style/Widget.ScrollView"
        android:layout_width="386dp"
        android:layout_height="423dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="54dp"
        android:background="#19262E"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints,UnknownId">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/stname"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:ems="10"
                android:hint="Enter Name"
                android:inputType="textPersonName"
                android:textColor="#FDFDFD"
                android:textColorHint="@android:color/background_light"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/stinstitute"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:ems="10"
                android:hint="Enter institution"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="@android:color/background_light" />

            <EditText
                android:id="@+id/stclass"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:ems="10"
                android:hint="Enter Class"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="@android:color/background_light"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/stmobile"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:ems="10"
                android:hint="Mobile (+88)"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="@android:color/background_light"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/stmail"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:ems="10"
                android:hint="Enter Email"
                android:inputType="textPersonName"
                android:textColor="@android:color/white"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/stpass"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:ems="10"
                android:hint="Enter New Password"
                android:inputType="textPersonName"
                android:textColor="@android:color/white"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/staddress"
                android:layout_width="match_parent"
                android:layout_height="65dp"


                android:ems="10"
                android:hint="Enter Address"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="@android:color/background_light"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/stsignbtn"
        android:layout_width="130dp"
        android:layout_height="54dp"
        android:layout_marginStart="143dp"
        android:layout_marginLeft="143dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="138dp"
        android:layout_marginRight="138dp"
        android:layout_marginBottom="46dp"
        android:text="Sign in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="411dp"
        android:layout_height="42dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:background="@android:color/holo_blue_light"
        android:fontFamily="monospace"
        android:gravity="center_horizontal"
        android:text="Provide Information"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>