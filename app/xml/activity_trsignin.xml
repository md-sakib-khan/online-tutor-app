<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#04222E"
    tools:context=".trsignin">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="405dp"
        android:layout_height="38dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:background="#FEFFFD"
        android:fontFamily="monospace"
        android:gravity="center_horizontal"
        android:text="Provide Information"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="402dp"
        android:layout_height="583dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="33dp"
        android:background="#414849"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextTextPersonName3"
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:textColor="#FFFFFF"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/cvlinkbox"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:ems="10"
                android:textColor="#FFFFFF"
                android:hint="Enter Your CV Link (Google Drive)"
                android:inputType="textPersonName"
                android:textColorHint="@android:color/background_light" />

            <EditText
                android:id="@+id/tutornamebox"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:textColor="#FFFFFF"
                android:ems="10"
                android:hint="Enter Name"
                android:inputType="textPersonName"
                android:textColorHint="@android:color/background_light" />

            <EditText
                android:id="@+id/tutorgenderbox"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:ems="10"
                android:hint="Enter Gender"
                android:textColor="#FFFFFF"
                android:inputType="textPersonName"
                android:textColorHint="@android:color/background_light" />

            <EditText
                android:id="@+id/tutorinstitutebox"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:ems="10"
                android:textColor="#FFFFFF"
                android:hint="Enter Institution"
                android:inputType="textPersonName"
                android:textColorHint="@android:color/background_light" />

            <EditText
                android:id="@+id/tutorsemesterbox"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:ems="10"
                android:textColor="#FFFFFF"
                android:hint="Semester"
                android:inputType="textPersonName"
                android:textColorHint="@android:color/background_light" />

            <EditText
                android:id="@+id/tutorstudyareabox"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:ems="10"
                android:hint="Study Area"
                android:textColor="#FFFFFF"
                android:inputType="textPersonName"
                android:textColorHint="@android:color/background_light" />

            <EditText
                android:id="@+id/tutorcurrentresultbox"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:ems="10"
                android:textColor="#FFFFFF"
                android:hint="Enter Current Result"
                android:inputType="textPersonName"
                android:textColorHint="@android:color/background_light" />

            <EditText
                android:id="@+id/tutornidnumberbox"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:ems="10"
                android:textColor="#FFFFFF"
                android:hint="Enter NID Number"
                android:inputType="textPersonName"
                android:textColorHint="@android:color/background_light" />

            <EditText
                android:id="@+id/tutormobilebox"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:ems="10"
                android:textColor="#FFFFFF"
                android:hint="Mobile(+88)"
                android:inputType="textPersonName"
                android:textColorHint="@android:color/background_light" />
            <EditText
                android:id="@+id/tutoremailbox"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:ems="10"
                android:textColor="#FFFFFF"
                android:hint="Email"
                android:inputType="textPersonName"
                android:textColorHint="@android:color/background_light" />
            <EditText
                android:id="@+id/tutorpasswordbox"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:ems="10"
                android:hint="New Password"
                android:textColor="#FFFFFF"
                android:inputType="textPersonName"
                android:textColorHint="@android:color/background_light" />

            <EditText
                android:id="@+id/tutoraddressbox"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:ems="10"
                android:textColor="#FFFFFF"
                android:hint="Enter Your Address"
                android:inputType="textPersonName"
                android:textColorHint="@android:color/background_light" />

            <Button
                android:id="@+id/tutorsigninbutton"
                android:layout_width="137dp"
                android:layout_height="66dp"
                android:layout_marginHorizontal="130dp"
                android:layout_marginVertical="50dp"
                android:fontFamily="monospace"
                android:text="Sign in"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>